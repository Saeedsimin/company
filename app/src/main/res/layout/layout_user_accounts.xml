<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="@dimen/standard_margin_2x"
    android:paddingBottom="@dimen/standard_margin_2x"
    android:paddingTop="@dimen/standard_margin_2x"
    android:clipToPadding="false"

    >
    <LinearLayout
        android:id="@+id/accounts_title_layout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layoutDirection="rtl"
        android:elevation="9dp"
        >
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin"
            android:paddingTop="@dimen/standard_margin"
            android:text="نام شرکت/فروشگاه "
            android:textSize="@dimen/large_font"
            />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin"
            android:paddingTop="@dimen/standard_margin"
            android:text="نوع فعالیت"
            android:textSize="@dimen/large_font"
            />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin_2x"
            android:paddingTop="@dimen/standard_margin_2x"
            android:text="اصلاح"
            android:textSize="@dimen/large_font"
            />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin"
            android:paddingTop="@dimen/standard_margin"
            android:text="حذف"
            android:textSize="@dimen/large_font"
            />

    </LinearLayout>
    <com.example.shehnepours.taxam.parents.NonScrollListView
        android:id="@+id/accounts_list"
        android:layout_below="@id/accounts_title_layout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/standard_margin_3x"
        android:stateListAnimator="@null"
        android:background="@color/white"
        android:clipToPadding="false"
        android:elevation="@dimen/standard_margin"
        >

    </com.example.shehnepours.taxam.parents.NonScrollListView>

    <RelativeLayout
        android:id="@+id/add_account_layout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accounts_list"
        android:paddingTop="@dimen/standard_margin_4x"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/standard_margin_2x"
        android:stateListAnimator="@null"
        android:background="@color/white"
        android:elevation="@dimen/standard_margin"
        >
        <ImageView
            android:id="@+id/add_account_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/standard_margin_2x"
            android:src="@drawable/ic_submit_accounts_gray"
            />
        <com.example.shehnepours.taxam.parents.CustomButton
            android:id="@+id/add_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@color/white"
            android:textColor="@color/hint_text"
            android:text="اضافه کردن"
            android:layout_toRightOf="@id/add_account_icon"
            />

    </RelativeLayout>

</RelativeLayout>