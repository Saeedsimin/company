            android:layout_marginBottom="@dimen/standard_margin"
            android:textAlignment="center"
            android:text="مرحله اعتراض"
            android:textStyle="bold" />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textAlignment="center"
            android:text="۹۶/۲/۲۵"
            android:textStyle="bold" />
    </TableRow>
    <TableRow
        android:id="@+id/newtaxfile_secondrow"
        android:background="@android:color/white"
        android:gravity="center"
        android:elevation="@dimen/standard_margin"
        >
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مالیات عملکردی"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textAlignment="center"
            android:textStyle="bold" />

        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="۱۳۹۶"
            android:textStyle="bold" />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textAlignment="center"
            android:text="مرحله کارشناسی"
            android:textStyle="bold" />
        <com.example.shehnepours.taxam.parents.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textAlignment="center"
            android:text="۹۶/۱/۱۵"
            android:textStyle="bold" />
    </TableRow>


</TableLayout>