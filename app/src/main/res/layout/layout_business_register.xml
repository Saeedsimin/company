<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/standard_margin_4x"
        android:paddingTop="70dp"
        android:paddingRight="@dimen/standard_margin_2x"
        android:paddingLeft="@dimen/standard_margin_2x"
        android:clipToPadding="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/standard_margin"
            android:paddingTop="@dimen/standard_margin"
            android:stateListAnimator="@null">

            <com.example.shehnepours.taxam.parents.CustomTextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:text="ثبت نام:"
                android:textColor="@color/main_btn_bck"
                android:textSize="@dimen/very_large_font"

                />

            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_text"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="نام شرکت/فروشگاه*"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />
            <!--<ImageView-->
            <!--android:id="@+id/company_name_star"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_below="@id/register_text"-->
            <!--android:layout_marginTop="@dimen/standard_margin_3x"-->
            <!--android:layout_marginLeft="@dimen/standard_margin_0.5x"-->
            <!--android:src="@drawable/ic_star_red"-->
            <!--/>-->
            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/activity_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/company_name"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="نوع فعالیت*"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />
            <!--<ImageView-->
            <!--android:id="@+id/activity_star"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_below="@id/company_name_star"-->
            <!--android:layout_marginTop="44dp"-->
            <!--android:layout_marginLeft="@dimen/standard_margin_0.5x"-->
            <!--android:src="@drawable/ic_star_red"-->
            <!--/>-->
            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/career_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_type"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="شغل*"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />
            <!--<ImageView-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_below="@id/activity_star"-->
            <!--android:layout_marginTop="44dp"-->
            <!--android:layout_marginLeft="@dimen/standard_margin_0.5x"-->
            <!--android:src="@drawable/ic_star_red"-->
            <!--/>-->
            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/career_name"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="شناسه ملی"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />

            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/economical_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/national_id"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="کد اقتصادی"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />

            <Spinner
                android:id="@+id/person_type_dropdown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/economical_code"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:layoutDirection="rtl"
                android:paddingRight="@dimen/standard_margin"
                android:spinnerMode="dropdown"
                android:dropDownWidth="match_parent"

                />

            <com.example.shehnepours.taxam.parents.CustomEditText
                android:id="@+id/validation_key_pre_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_type_dropdown"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@drawable/edittextbackground"
                android:hint="کد رهگیری پیش ثبت نام"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin" />

            <com.example.shehnepours.taxam.parents.CustomButton
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/validation_key_pre_signup"
                android:layout_marginBottom="@dimen/standard_margin_2x"
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@color/other_btn_bck"
                android:elevation="@dimen/standard_margin"
                android:stateListAnimator="@null"
                android:text="ثبت"
                android:textColor="@color/white"
                android:textSize="@dimen/very_large_font" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
